{
  "manifest_version": 2,

  "name": "Lumosity",
  "description": "Train the way you want",
  "version": "0.0.1",

  "permissions": [
    "alarms",
    "notifications",
    "background",
    "tabs",
    "https://staging-6.lumosity.com/api/oauth/token"
  ],

  "chrome_url_overrides" : {
    "newtab": "html/background.html"
  },

  "browser_action": {
    "default_icon": {
      "19": "brain_19x19.png",
      "38": "brain_76x76.png"
    },
    "default_popup": "html/popup.html"
  },

  "background": {
    "page": "html/background.html",
    "persistent": false
  }
}
